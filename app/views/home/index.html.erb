$(document).ready(function(){
	$("#btnAddTrip").on("click", function(){
		var title = $("#title").val();

		var trip_source = $("#trip_source").val();
		var destination = $("#destination").val();

		var start_date_year = $("#start_date_year").val();
		var start_date_month = $("#start_date_month").val();
		var start_date_day = $("#start_date_day").val();

		var start_date = start_date_year + "-" + start_date_month + "-" + start_date_day;

		var end_date_year = $("#end_date_year").val();
		var end_date_month = $("#end_date_month").val();
		var end_date_day = $("#end_date_day").val();

		var end_date = end_date_year + "-" + end_date_month + "-" + end_date_day;
		var description = $("#description").val();
		var trip_type = $("#trip_type").val();

		data = {
			trip: {
				title: title,
				source: trip_source,
				destination: destination,
				start_date: start_date,
				end_date: end_date,
				description: description,
				trip_type: trip_type
			}
		};

		$.ajax({
			url: '/trips',
			type: 'post',
			data: data,
			success: function(response){
				console.log(response.responseText)	
			}
		});
		$("#addTripModal").modal('hide');
	});
});



<% end %>